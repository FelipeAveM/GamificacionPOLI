<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/trivia_fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juegos.JuegoTrivia">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:id="@+id/scroll_trivia"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="65dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/LayTrivia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enunPreg"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="fill_horizontal"
                    android:scrollbars="vertical"
                    android:text="texto"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scroll_trivia">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/opcionRes1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangulo_uno"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="nextScreen"
                    android:scrollbars="vertical"
                    android:text="Opci贸n1"
                    android:textSize="11sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/opcionRes3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangulo_uno"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="nextScreen"
                    android:scrollbars="vertical"
                    android:text="Opci贸n 3"
                    android:textSize="11sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/opcionRes2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangulo_uno"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="nextScreen"
                    android:scrollbars="vertical"
                    android:text="Opci贸n 2"
                    android:textSize="11sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/opcionRes4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/rectangulo_uno"
                    android:fontFamily="@font/open_sans_light"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="nextScreen"
                    android:scrollbars="vertical"
                    android:text="Opci贸n 4"
                    android:textSize="11sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
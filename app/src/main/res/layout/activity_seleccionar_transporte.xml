<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@drawable/fondo_transportes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secuencia.SeleccionarTransporte">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="480dp"
        android:layout_marginTop="125dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/transp1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_alas"
            android:contentDescription="@string/Transporte1"
            android:onClick="btnSelTrans" />

        <ImageView
            android:id="@+id/transp2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_barco"
            android:contentDescription="@string/Transporte2"
            android:onClick="btnSelTrans" />

        <ImageView
            android:id="@+id/transp3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_globo"
            android:contentDescription="@string/Transporte3"
            android:onClick="btnSelTrans" />

        <ImageView
            android:id="@+id/transp4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_balsa_1"
            android:contentDescription="@string/Transporte5"
            android:onClick="btnSelTrans"/>

        <ImageView
            android:id="@+id/transp5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_balsa"
            android:contentDescription="@string/Transporte5"
            android:onClick="btnSelTrans" />

        <ImageView
            android:id="@+id/transp6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/boton_tronco"
            android:contentDescription="@string/Transporte6"
            android:onClick="btnSelTrans" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="97dp"
        android:layout_height="47dp"
        android:onClick="continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/boton_siguiente" />

    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.Holo.Light.TextView"
        android:layout_width="317dp"
        android:layout_height="72dp"
        android:text="Para salir de la isla puedes construir cualqueira de estos medios de transporte con las monedas ganadas en los juegos."
        android:textColor="@android:color/transparent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:background="@drawable/seleccion_personaje"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secuencia.SeleccionarRol">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="none">

            <ImageView
                android:id="@+id/rolM1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol1"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/juan" />

            <ImageView
                android:id="@+id/rolF1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol1f"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/juana" />

            <ImageView
                android:id="@+id/rolM2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol2"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/fernando" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="none">

            <ImageView
                android:id="@+id/rolF2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol2f"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/fernanda" />

            <ImageView
                android:id="@+id/rolF3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol3f"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/carlos" />

            <ImageView
                android:id="@+id/rolM3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol3"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/carla" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="none">

            <ImageView
                android:id="@+id/rolM4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol4"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/alex" />

            <ImageView
                android:id="@+id/rolF4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol4f"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/alexa" />

            <ImageView
                android:id="@+id/rolM5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol5"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/alejo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:showDividers="none">

            <ImageView
                android:id="@+id/rolF5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol5f"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/aleja" />

            <ImageView
                android:id="@+id/rolM6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol6"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/andres" />

            <ImageView
                android:id="@+id/rolF6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/rol6f"
                android:onClick="btnSelRol"
                app:srcCompat="@drawable/andrea" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnVolver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/boton_atras" />

</android.support.constraint.ConstraintLayout>

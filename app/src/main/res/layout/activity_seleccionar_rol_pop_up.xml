<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/seleccion_personaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secuencia.SeleccionarRolPopUp">

    <ImageView
        android:id="@+id/rolPrin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fernando_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_seleccionar"
        android:onClick="btnSelRol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rolPrin" />

</android.support.constraint.ConstraintLayout>